<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="369dp"
        android:layout_height="369dp"
        android:background="@drawable/grid"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/grid_pos_00"
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:layout_margin="10dp"
            android:onClick="dropInView"
            android:tag="0"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="0"
            app:srcCompat="@android:color/transparent" />

        <ImageView
            android:id="@+id/grid_pos_10"
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:layout_margin="10dp"
            android:onClick="dropInView"
            android:tag="3"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="1"
            app:srcCompat="@android:color/transparent" />

        <ImageView
            android:id="@+id/grid_pos_20"
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:layout_margin="10dp"
            android:onClick="dropInView"
            android:tag="6"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="2"
            app:srcCompat="@android:color/transparent" />

        <ImageView
            android:id="@+id/grid_pos_01"
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:layout_margin="10dp"
            android:onClick="dropInView"
            android:tag="1"
            app:layout_column="1"
            app:layout_gravity="center"
            app:layout_row="0"
            app:srcCompat="@android:color/transparent" />

        <ImageView
            android:id="@+id/grid_pos_11"
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:layout_margin="10dp"
            android:onClick="dropInView"
            android:tag="4"
            app:layout_column="1"
            app:layout_gravity="center"
            app:layout_row="1"
            app:srcCompat="@android:color/transparent" />

        <ImageView
            android:id="@+id/grid_pos_21"
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:layout_margin="10dp"
            android:onClick="dropInView"
            android:tag="7"
            app:layout_column="1"
            app:layout_gravity="center"
            app:layout_row="2"
            app:srcCompat="@android:color/transparent" />

        <ImageView
            android:id="@+id/grid_pos_02"
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:layout_margin="10dp"
            android:onClick="dropInView"
            android:tag="2"
            app:layout_column="2"
            app:layout_gravity="center"
            app:layout_row="0"
            app:srcCompat="@android:color/transparent" />

        <ImageView
            android:id="@+id/grid_pos_12"
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:layout_margin="10dp"
            android:onClick="dropInView"
            android:tag="5"
            app:layout_column="2"
            app:layout_gravity="center"
            app:layout_row="1"
            app:srcCompat="@android:color/transparent" />

        <ImageView
            android:id="@+id/grid_pos_22"
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:layout_margin="10dp"
            android:onClick="dropInView"
            android:tag="8"
            app:layout_column="2"
            app:layout_gravity="center"
            app:layout_row="2"
            app:srcCompat="@android:color/transparent" />

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/match_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="178dp"
        android:layout_marginLeft="178dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="175dp"
        android:layout_marginRight="175dp"
        android:layout_marginBottom="93dp"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginLeft="161dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="162dp"
        android:layout_marginRight="162dp"
        android:layout_marginBottom="65dp"
        android:onClick="gameReset"
        android:text="Reset"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>